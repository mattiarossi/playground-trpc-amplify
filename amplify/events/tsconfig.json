{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["../../src/*"]
    }
  },
  "include": ["./**/*.ts", "../../src/server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
